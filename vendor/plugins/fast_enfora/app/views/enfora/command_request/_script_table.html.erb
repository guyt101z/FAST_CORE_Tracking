<table id="ub-table">
	<tr class="header">
		<td>Command</td>
		<td>Expect</td>
		<td>Comment</td>
	</tr>
	<% @script.each_with_index do |entry, index| %>
		<tr class="<%= cycle("gray_row", "") %>">
			<% if entry[:blank] and entry[:comment] %>
				<td colspan="3" class="bg_overview"><%= entry[:comment] %></td>
			<% else %>
				<td><%= entry[:command] or '&nbsp;' %></td>
				<td><%= entry[:expect] or '&nbsp;' %></td>
				<td><%= entry[:comment] or '&nbsp;' %></td>
			<% end %>
		</tr>
		<input type="hidden" name="commands[command<%= index %>]" value="<%= entry[:command] %>" />
		<input type="hidden" name="device_id" value="<%= params[:id] %>" />
	<% end %>
</table>
